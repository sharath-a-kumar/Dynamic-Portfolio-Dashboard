# Backend Environment Variables
# Copy this file to .env and update values as needed

# Server Configuration
PORT=3001

# Portfolio Data Source
# Path to the Excel file containing portfolio data (relative to backend directory)
EXCEL_FILE_PATH=../E555815F_58D029050B.xlsx

# Cache Configuration
# TTL for Current Market Price data in seconds (default: 10 seconds)
CACHE_TTL_CMP=10
# TTL for financial metrics (P/E Ratio, Earnings) in seconds (default: 1 hour)
CACHE_TTL_FINANCIALS=3600

# Environment
NODE_ENV=development

# CORS Configuration
# Frontend URL for CORS (update for production)
FRONTEND_URL=http://localhost:3000
